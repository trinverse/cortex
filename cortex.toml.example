# Cortex Configuration File Example
# Copy this to ~/.config/cortex/config.toml or ~/.cortex.toml

[general]
show_hidden = false
confirm_delete = true
show_icons = false
terminal = "xterm"
editor = "vim"

[ai]
enabled = true
default_provider = "groq"  # Options: "groq", "ollama", "simple-ai"
require_confirmation = false
cache_responses = true
cache_ttl_minutes = 60

[ai.cloud]
# Get your free API key from https://console.groq.com
# Uncomment and add your key below:
# groq_api_key = "your-api-key-here"

# Note: If no API key is configured, Cortex will use a bundled demo key
# The demo key works out-of-the-box but has shared rate limits
# We recommend getting your own free key for the best experience

[ai.ollama]
url = "http://localhost:11434"
model = "llama2"

[colors]
# Customize your color scheme here
selected = "Blue"
normal = "White"
directory = "Cyan"
executable = "Green"

[keybindings]
# Customize keybindings if needed
# quit = "q"
# help = "F1"